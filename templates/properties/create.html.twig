{% extends 'base.html.twig' %}

{% block title %}Insérer une nouvelle annonce{% endblock %}

{% form_theme form 'properties/_collection.html.twig' %}

{% block body %}

    {# SECTION FORM NEW PROPERTIES #}

    <div class="main-add-property">
        <div class="container">
            <div class="form-content">
                <h2 class="form-title">Insérer votre annonce</h2>

                {{ form_start(form) }}
                
                <div class="row">

                    <div class="col-lg-6">

                        {{ form_row(form.type) }}
                        {{ form_row(form.action) }}

                        <span class="errorCity errorMessage"></span>
                        {{ form_row(form.city) }}

                        <span class="errorAddress errorMessage"></span>
                        {{ form_row(form.address) }}

                        <span class="errorPostalCode errorMessage"></span>
                        {{ form_row(form.postalCode) }}

                        <span class="errorPrice errorMessage"></span>
                        {{ form_row(form.price) }}

                        <span class="errorDescription errorMessage"></span>
                        {{ form_row(form.description) }}

                        {{ form_row(form.options) }}

                    </div>

                    <div class="col-lg-6">

                        <span class="errorBedroom errorMessage"></span>
                        {{ form_row(form.bedrooms) }}

                        <span class="errorShower errorMessage"></span>
                        {{ form_row(form.shower) }}

                        <span class="errorArea errorMessage"></span>
                        {{ form_row(form.area) }}

                        <span class="errorCoverImage errorMessage"></span>
                        {{ form_row(form.coverImage) }}

                        {{ form_row(form.images) }}

                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" name="submit" id="btn-create-property" class="form-submit" value="Créer votre annonce" />
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="/js/properties.js"></script>
{% endblock %}