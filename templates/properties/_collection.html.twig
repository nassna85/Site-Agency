{% block _properties_images_widget %} {# instruction lorsqu'on appelle le champ properties_images #}
    <p>Ajouter vos images !</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i>
            Ajouter une image
        </button>
    </div>
{% endblock %}

{% block _properties_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _properties_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row align-items-center">
            <div class="col-9">
                {{ form_widget(form.path) }}
            </div>
            <div class="col-3">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
            </div>
        </div>
    </div>
{% endblock %}