{% extends 'admin/base.html.twig' %}

{% block title %}Administration demande de contact{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 120px;">
        <h2 class="mb-5 font-weight-bold">Administration demande de contact</h2>
        <div class="divider_title"></div>

        <table id="table" class="table table-hover" style="margin-bottom: 100px;">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th class="text-center">Email</th>
                <th class="text-center">Message</th>
                <th class="text-center">Numéro</th>
                <th class="text-center">Date</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for contact in contacts %}

                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.name }}</td>
                    <td class="text-center">{{ contact.email }}</td>
                    <td class="text-center">{{ contact.message | nl2br | truncate(50) }}</td>
                    <td class="text-center">{{ contact.phoneNumber | default('Non communiqué') }}</td>
                    <td class="text-center">{{ contact.createdAt | date('d/m/Y') }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_contact_showDetail', {'id':contact.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('admin_contact_delete', {'id':contact.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sur de vouloir supprimer ce message ?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}




