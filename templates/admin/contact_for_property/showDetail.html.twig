{% extends 'admin/base.html.twig' %}

{% block title %}Detail du message pour le bien n° {{ contactForProperty.property.id }}{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid" style="height: 100vh;margin-bottom: 0px;background-color: #fff;">
        <div class="container" style="margin-top: 80px;">
            <a href="{{ path('admin_contactForProperty_index') }}">Retour à la liste des contacts/propriétés</a>
            <h2 class="my-5 font-weight-bold">Détail du message pour le bien n° {{ contactForProperty.property.id }}</h2>
            <div class="divider_title"></div>

            <dl class="row">
                <dt class="col-md-4">Nom</dt>
                <dd class="col-md-8">{{ contactForProperty.author.fullName }}</dd>
                <dt class="col-md-4">Email</dt>
                <dd class="col-md-8">{{ contactForProperty.author.email }}</dd>
                <dt class="col-md-4">Message</dt>
                <dd class="col-md-8"> {{ contactForProperty.message | nl2br }}</dd>
                <dt class="col-md-4">Id du bien correspondant</dt>
                <dd class="col-md-8">{{ contactForProperty.property.id }}</dd>
                <dt class="col-md-4">Date d'envoie</dt>
                <dd class="col-md-8">{{ contactForProperty.createdAt | date('d/m/Y') }}</dd>
                <dt class="col-md-4">Consulter le bien</dt>
                <dd class="col-md-8">
                    <a href="{{ path('properties_show', {'id':contactForProperty.property.id}) }}" class="btn btn-info btn-sm" target="_blank">Voir le bien</a>
                </dd>
            </dl>
        </div>
    </div>
{% endblock %}