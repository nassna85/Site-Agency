{% extends 'admin/base.html.twig' %}

{% block title %}Liste des options des propriétés{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 120px; height: 100vh;">
        <h2 class="mb-5 font-weight-bold">Administration des options des propriétés</h2>
        <div class="divider_title"></div>

        <a href="{{ path('admin_propertiesOptions_create') }}" class="btn btn-success mb-5">Ajouter une option</a>

        <table id="table" class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            {% for option in options %}

                <tr>
                    <td>{{ option.id }}</td>
                    <td>{{ option.name }}</td>
                    <td>
                        <a href="{{ path('admin_propertiesOptions_edit', {'id':option.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_propertiesOptions_delete', {'id':option.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sur de vouloir supprimer cette option ?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}

