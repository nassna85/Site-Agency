{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'une option{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 120px; height: 100vh;">
        <h2 class="font-weight-bold">Modification de l'option {{ option.name }}</h2>
        <div class="divider_title"></div>

        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form) }}

                {{ form_widget(form) }}

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Modifier</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}