{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'utilisateur {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid" style="height: 100vh;margin-bottom: 0px;background-color: #fff;">
        <div class="container" style="margin-top: 100px;">
            <a href="{{ path('admin_users_index') }}">
                <i class="fas fa-arrow-left"></i>
                Retour Ã  la liste des utilisateurs
            </a>
            <h2 class="mb-5 font-weight-bold mt-3">Modification de {{ user.fullName }}</h2>
            <div class="divider_title"></div>

            <div class="row">
                <div class="col-lg-8">
                    {{ form_start(form) }}

                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.roles) }}
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            {{ form_row(form.avatar) }}
                        </div>
                        <div class="col-lg">
                            <img src="{{ user.avatar | default('/images/avatar_default.png') }}" alt="Avatar de {{ user.fullName }}" class="img-fluid avatar-normal">
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Modifier</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}