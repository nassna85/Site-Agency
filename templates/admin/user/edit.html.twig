{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'utilisateur {{ user.fullName }}{% endblock %}

{% block stylesheets %}
    <style>
        div.jumbotron-fluid {
            background-color: #fff;
        }
        .form-control {
            border : 1px solid #bdc3c7;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid" style="height: 100vh;margin-bottom: 0px;">
        <div class="container" style="margin-top: 100px;">
            <h1 class="mb-5">Modification de {{ user.fullName }}</h1>
            <div class="divider_title"></div>

            <div class="row">
                <div class="col-lg-8">
                    {{ form_start(form) }}

                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.roles) }}
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_row(form.avatar) }}
                        </div>
                        <div class="col-lg">
                            <img src="{{ user.avatar }}" alt="Avatar de {{ user.fullName }}" class="img-fluid">
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Modifier</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}