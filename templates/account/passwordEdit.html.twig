{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe de {{ user.fullName }}{% endblock %}

{% block body %}

    {# SECTION HEADER EDIT PASSWORD #}
    {% include 'partials/_header_jumbotron.html.twig' with {'sub_title': "Modifier votre mot de passe"} %}

    <section id="password_edit">
        <div class="container">
            <h2 class="text-left">Modification du mot de passe de {{ user.fullName }}</h2>
            <div class="divider_title"></div>

            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <div class="card shadow p-5 my-5">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}

                        <div class="form-group pt-2">
                            <button type="submit" class="btn btn-primary">Confirmer</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}