{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {# SECTION HEADER CONTACT #}
    {% include 'partials/_header_jumbotron.html.twig' with {'sub_title': "Contact"} %}

    {# -------------IF ERROR FORM SEND---------------- #}

    {% if not form.vars.valid %}
        <div class="container" style="margin-top: 100px;">
            <div class="alert alert-danger">
                Erreur lors de l'envoie de votre message. Vérifier vos champs et rééssayez à nouveau.
            </div>
        </div>
    {% endif %}

    <div class="jumbotron jumbotron-fluid" style="margin-bottom: 0px;background-color: #fff;">
        <div class="container">
            <h2 class="font-weight-bold">Demande de contact</h2>
            <div class="divider_title"></div>

            <section class="contact header">
                <div class="row align-items-center mb-5">
                    <div class="col-lg-6">
                        <img src="/images/contact-us2.jpg" class="rounded img-fluid mb-5 border-0" alt="Image page de contact">
                    </div>
                    <div class="col-lg-6">
                        <h3 class="text-center h5">Vous désirez nous contacter... ?</h3>
                        <p class="text-center mt-5">
                            Nous nous déplaçons chez vous ou vous recevons sur rendez-vous
                            dans nos bureaux sur Bruxelles, Zaventem, Waterloo.<br>
                            Vous pouvez nous contacter par téléphone ou remplir le formulaire, notre équipe sera ravi de vous recontacter dans les plus bref délais.
                        </p>
                    </div>
                </div>
            </section>

            <div class="card shadow p-4" style="background-color: #f1f2f6;margin-bottom: 80px;">

                {{ form_start(form) }}

                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.message) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.phoneNumber) }}
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-sm">Envoyer votre message</button>
                    </div>
                </div>

                {{ form_end(form) }}

            </div>

            <section class="container-fluid contact description">
                <div class="container">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <i class="fas fa-map-marker-alt"></i>
                            <address>
                                123, Avenue de l'invention<br/>
                                1070 Bruxelles<br/>
                                Belgique
                            </address>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-phone"></i>
                            <p>02/565/76.78</p>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-envelope"></i>
                            <p>nassna85@hotmail.fr</p>
                        </div>
                    </div>

                    <h2 style="color: #282d32;font-weight: bold;margin-top: 80px;margin-bottom: 60px;">Ou nous trouver ?</h2>

                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2518.4924785184885!2d4.305289851601439!3d50.85908187943342!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c3c1579cfbd64f%3A0x519b060648c3343b!2sRue+Louis+Corhay%2C+1080+Molenbeek-Saint-Jean!5e0!3m2!1sfr!2sbe!4v1555260801924!5m2!1sfr!2sbe" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

